<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:textSize="18sp"
            android:textAppearance="@android:style/TextAppearance.Widget.EditText"
            android:textAlignment="center">

        </TextView>

        <Button
            android:id="@+id/close_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="CLOSE">

        </Button>
    </LinearLayout>

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="@string/name_hint"></EditText>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageview_color_palette_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:src="@drawable/color_edge"
                android:tag="0"></ImageView>

            <ImageView
                android:id="@+id/imageview_color_palette_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/grey"

                android:src="@drawable/color_edge"
                android:tag="1" />

            <ImageView
                android:id="@+id/imageview_color_palette_red"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/red"

                android:src="@drawable/color_edge"
                android:tag="2" />

            <ImageView
                android:id="@+id/imageview_color_palette_orange"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/orange"

                android:src="@drawable/color_edge"
                android:tag="3" />

            <ImageView
                android:id="@+id/imageview_color_palette_yellow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/yellow"

                android:src="@drawable/color_edge"
                android:tag="4" />

            <ImageView
                android:id="@+id/imageview_color_palette_chartreuse"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/chartreuse"

                android:src="@drawable/color_edge"
                android:tag="5" />

            <ImageView
                android:id="@+id/imageview_color_palette_green"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/green"

                android:src="@drawable/color_edge"
                android:tag="6" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_color_palette_spring_green"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/spring_green"

                android:src="@drawable/color_edge"
                android:tag="7" />

            <ImageView
                android:id="@+id/imageview_color_palette_cyan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/cyan"

                android:src="@drawable/color_edge"
                android:tag="8" />

            <ImageView
                android:id="@+id/imageview_color_palette_sky_blue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/sky_blue"

                android:src="@drawable/color_edge"
                android:tag="9" />

            <ImageView
                android:id="@+id/imageview_color_palette_blue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/blue"

                android:src="@drawable/color_edge"
                android:tag="10" />

            <ImageView
                android:id="@+id/imageview_color_palette_purple"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/purple"

                android:src="@drawable/color_edge"
                android:tag="11" />


            <ImageView
                android:id="@+id/imageview_color_palette_magenta"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/magenta"

                android:src="@drawable/color_edge"
                android:tag="12" />

            <ImageView
                android:id="@+id/imageview_color_palette_pink"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/pink"

                android:src="@drawable/color_edge"
                android:tag="13" />

        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/description_edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="@string/description_hint"></EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/button_linear_layout">
        <Button
            android:id="@+id/set_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SET" />
    </LinearLayout>
</LinearLayout>